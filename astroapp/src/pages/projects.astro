---
import Layout from "../layout/Layout.astro";

const page = {
  title: "项目 - 光合",
  description: "个人项目展示",
  lang: "zh-CN" as const,
};

// 项目列表数据
const projects = [
  {
    title: "个人博客",
    description: "使用 Astro + Tailwind CSS 构建的现代化个人博客系统",
    tech: ["Astro", "Tailwind CSS", "Bun"],
    url: "https://github.com/guanghe",
    status: "进行中",
    year: "2025",
  },
  {
    title: "示例项目 1",
    description: "这是一个示例项目的描述，展示项目的主要功能和特点",
    tech: ["TypeScript", "React", "Node.js"],
    url: "https://github.com/guanghe",
    status: "已完成",
    year: "2024",
  },
  {
    title: "示例项目 2",
    description: "另一个示例项目，可以添加更多具体的项目信息",
    tech: ["Python", "Django", "PostgreSQL"],
    url: "https://github.com/guanghe",
    status: "归档",
    year: "2023",
  },
];

const statusColors = {
  进行中: "text-green-600",
  已完成: "text-blue-600",
  归档: "text-gray-500",
};
---

<Layout {...page}>
  <div>
    <h1 class="text-3xl font-bold mb-8">项目</h1>

    <div class="space-y-8">
      {
        projects.map((project) => (
          <article class="border-b border-gray-200 pb-8 last:border-b-0">
            <div class="flex items-start justify-between mb-3">
              <div class="flex-1">
                <div class="flex items-baseline gap-3 mb-2">
                  <h2 class="text-2xl font-bold">
                    <a
                      href={project.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="hover:highlight-underline"
                    >
                      {project.title}
                    </a>
                  </h2>
                  <span
                    class={`text-sm font-en-italic ${statusColors[project.status as keyof typeof statusColors]}`}
                  >
                    {project.status}
                  </span>
                </div>
                <p class="text-gray-600 leading-relaxed mb-4">
                  {project.description}
                </p>
              </div>
              <span class="text-sm text-gray-400 font-en-italic ml-4">
                {project.year}
              </span>
            </div>

            <div class="flex flex-wrap gap-2">
              {project.tech.map((tech) => (
                <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">
                  {tech}
                </span>
              ))}
            </div>
          </article>
        ))
      }
    </div>

    <div class="mt-12 p-6 bg-gray-50 rounded-lg">
      <p class="text-gray-600 text-center">
        更多项目请访问{" "}
        <a
          href="https://github.com/guanghe"
          target="_blank"
          rel="noopener noreferrer"
          class="highlight-underline"
        >
          GitHub
        </a>
      </p>
    </div>
  </div>
</Layout>

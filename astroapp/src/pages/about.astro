---
import Layout from "../layout/Layout.astro";

const page = {
  title: "关于 - 光合",
  description: "关于光合",
  lang: "zh-CN" as const,
};
---

<Layout {...page}>
  <article class="prose max-w-none">
    <h1 class="text-xl font-bold mb-6 hidden md:block">关于</h1>

    <div class="space-y-6 leading-relaxed">
      <p>
        <a
          href="https://github.com/HarborLibrary/Political-Science/blob/master/%E5%BC%97%E9%87%8C%E5%BE%B7%E9%87%8C%E5%B8%8C%C2%B7%E5%93%88%E8%80%B6%E5%85%8B%EF%BC%9A%E9%80%9A%E5%BE%80%E5%A5%B4%E5%BD%B9%E4%B9%8B%E8%B7%AF%20(%E5%8F%B0%E6%B9%BE%E7%89%88%20%E6%AE%B7%E6%B5%B7%E5%85%89%E8%AF%91).pdf"
          class="text-gray-500 highlight-underline"
          target="_blank"
          rel="noopener noreferrer"
        >
          Hayek的野生门徒
        </a>
      </p>

      <section>
        <ul class="space-y-2 text-sm">
          <li><span class="font-en-italic text-gray-500">2015 - 2019</span> UI设计师</li>
          <li><span class="font-en-italic text-gray-500">2019 - 2020</span> 交互设计</li>
          <li><span class="font-en-italic text-gray-500">2020 - 2023</span> 产品经理</li>
          <li><span class="font-en-italic text-gray-500">2023 - 至今</span> 全栈开发</li>
        </ul>
      </section>

      <section>
        <h2 class="text-lg font-bold mb-3">技术栈</h2>
        <div class="space-y-3">
          <div>
            <h3 class="text-xs text-gray-500 mb-2 font-en-italic">Design</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Figma</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full line-through opacity-50">Sketch</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full line-through opacity-50">Photoshop</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Axure</span>
            </div>
          </div>
          <div>
            <h3 class="text-xs text-gray-500 mb-2 font-en-italic">Frontend</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">JavaScript</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">TypeScript</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">React</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Tailwind CSS</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Astro</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Flutter</span>
            </div>
          </div>
          <div>
            <h3 class="text-xs text-gray-500 mb-2 font-en-italic">Backend</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Node.js</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Python</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">FastAPI</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">Rust</span>
            </div>
          </div>
          <div>
            <h3 class="text-xs text-gray-500 mb-2 font-en-italic">Database</h3>
            <div class="flex flex-wrap gap-2">
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">MySQL</span>
              <span class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full">PostgreSQL</span>
            </div>
          </div>
        </div>
      </section>

      <section>
        <h2 class="text-lg font-bold mb-3">联系方式</h2>
        <ul class="space-y-2 text-sm">
          <li>
            <span class="font-en-italic text-gray-500">Email:</span>
            <a href="mailto:cyberobj@gmail.com" class="highlight-underline ml-2">
              cyberobj@gmail.com
            </a>
          </li>
          <li>
            <span class="font-en-italic text-gray-500">GitHub:</span>
            <a
              href="https://github.com/cyberobjec"
              class="highlight-underline ml-2"
              target="_blank"
              rel="noopener noreferrer"
            >
              @cyberobjec
            </a>
          </li>
          <li>
            <span class="font-en-italic text-gray-500">X:</span>
            <a
              href="https://x.com/guangherizhi"
              class="highlight-underline ml-2"
              target="_blank"
              rel="noopener noreferrer"
            >
              @guangherizhi
            </a>
          </li>
        </ul>
      </section>
    </div>
  </article>
</Layout>
